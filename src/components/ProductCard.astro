---
interface Props {
  name: string;
  image: string;
  description?: string;
}

const { name, image, description } = Astro.props;
---

<div class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
  <div class="aspect-square overflow-hidden bg-gray-50">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      onerror="this.src='/images/placeholder-product.svg'"
      loading="lazy"
    />
  </div>
  <div class="p-4">
    <h3 class="font-semibold text-gray-900 text-lg">{name}</h3>
    {description && (
      <p class="mt-1 text-sm text-gray-500">{description}</p>
    )}
  </div>
</div>
