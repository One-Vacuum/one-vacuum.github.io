---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import ProductCard from '../../components/ProductCard.astro';
import { storeLinks } from '../../data/products';
import { useTranslations } from '../../i18n/utils';
import fs from 'node:fs';
import path from 'node:path';

const t = useTranslations('ko');

// Read products from public/products/products.json
let products: any[] = [];
try {
  const filePath = path.join(process.cwd(), 'public/products/products.json');
  const fileContent = fs.readFileSync(filePath, 'utf-8');
  products = JSON.parse(fileContent);
  products.sort((a, b) => (a.order || 99) - (b.order || 99));
} catch (e) {
  // No products file or invalid JSON
  products = [];
}
---

<BaseLayout>
  <Hero />

  <!-- Products Section -->
  <section id="products" class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {t('products.title')}
        </h2>
        <p class="text-lg text-gray-600">
          {t('products.subtitle')}
        </p>
      </div>

      {products.length > 0 ? (
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 md:gap-6">
          {products.map((product) => (
            <ProductCard
              name={product.nameKo}
              image={`/products/images/${product.image}`}
              description={product.descriptionKo}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="text-6xl mb-4">üì¶</div>
          <p class="text-xl text-gray-500">{t('products.comingSoon')}</p>
        </div>
      )}
    </div>
  </section>

